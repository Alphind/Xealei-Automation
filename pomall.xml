<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<modelVersion>4.0.0</modelVersion>
	<groupId>org</groupId>
	<artifactId>Xealei</artifactId>
	<version>0.0.1-SNAPSHOT</version>


	<build>
		<plugins>
			<!-- Maven Surefire Plugin -->
			<plugin>
				 <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-surefire-plugin</artifactId>
          <version>3.2.1</version>
				<configuration>
					<!-- Specify your test runner classes here -->
					<includes>
					<include>org.alphind.xealei.runner.TC1LoginTestRunner</include>
					<include>org.alphind.xealei.runner.TC3AddSuitesTestRunner</include>
					<include>org.alphind.xealei.runner.TC4EditSuitesTestRunner</include>
					<include>org.alphind.xealei.runner.TC5AddIndividualsTestRunner</include>	
					<include>org.alphind.xealei.runner.TC6EditIndividualsTestRunner</include>	
					</includes>
				</configuration>
				<dependencies>
					<dependency>
							<groupId>org.apache.maven.surefire</groupId>
							<artifactId>surefire-junit47</artifactId>
							<version>3.2.1</version>
					</dependency>
				</dependencies>
			</plugin>


			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.11.0</version>
				<configuration>
					<source>17</source>
					<target>17</target>
				</configuration>
			</plugin>

		</plugins>
	</build>


